<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/trailer_card_view_layout_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <android.support.v4.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >


    <android.support.v7.widget.CardView
        android:id="@+id/trailer_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:elevation="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        card_view:cardCornerRadius="@dimen/card_radius">

        <TextView
            android:id="@+id/text_view_reviewed_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:textSize="15sp"
            android:text="@string/reviewed_by"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

         <TextView
            android:id="@+id/text_view_reviewer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:paddingBottom="70dp"
            tools:text="Dave"
            android:textSize="15sp"
            app:layout_constraintLeft_toRightOf="@id/text_view_reviewed_by"
            app:layout_constraintTop_toTopOf="@id/text_view_reviewed_by"

            />

        <TextView
            android:id="@+id/text_view_review_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="25dp"
            android:paddingBottom="20dp"
            android:text="@string/review"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_view_reviewed_by"

            />

        <com.avivamiriammandel.watchme.utility.ExpandableTextView
            android:id="@+id/text_view_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="25dp"
            app:layout_constraintLeft_toRightOf="@+id/text_view_reviewer"
            app:layout_constraintTop_toBottomOf="@id/text_view_reviewer"
            tools:text="Sample Review csthfhgfljhglgkjklj;ljkljlkj;lklhbghjftyfghfhjgjg
            ggigftydterwfstrssgfgfdfgdgfhgfuydsrdrsesjkhkkljlkjlhmn,mn,,m
            mnbn,m,..m,.m.,,,.m.kkmk.,mgcfrtedtrrt566rg6gyghggffffffhgggggggggggggggggggggggggg
            hbhkjhkjhkjhkjhjkhnjkhkhjkhjkhhhhhhjkhjjjnjbnbrev esserfdcgfgcbfcbvcbvbbv
            jbm nbnnmnnnmmbmnbnnbjkjnuygfdzsrtgdfcngcv"
            tools:textColor="@color/colorBlack" />


    </android.support.v7.widget.CardView>

    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>